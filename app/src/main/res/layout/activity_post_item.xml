<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tapiwa.swapandtop.SwapandTop.Main.Electronics.PostItemActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/electronics_post_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:backgroundTint="@color/colorPrimary"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/AppTheme.PopupOverlay"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/electronics_post_image_cardv"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@id/electronics_post_toolbar"
        android:layout_height="150dp"
        android:layout_marginTop="2dp">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/image_add_imgv"
        android:layout_gravity="right|bottom"
        android:background="@drawable/ic_image_add_button"
        android:layout_marginRight="8dp"

        />

    </android.support.v7.widget.CardView>





</RelativeLayout>
