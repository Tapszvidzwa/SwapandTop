<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/login_relativeLayout"
    android:background="@drawable/login_screen_background"
    tools:context="com.example.tapiwa.swapandtop.SwapandTop.Authentication.LoginScreenActivity">


    <TextView
        android:id="@+id/vehicles"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:text="vehicles"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="53dp"
   />

    <TextView
        android:id="@+id/electronics"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/vehicles"
        android:layout_marginEnd="54dp"
        android:text="electronics" />

    <TextView
        android:id="@+id/furniture"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/vehicles"
        android:layout_marginBottom="119dp"
        android:text="furniture" />

    <TextView
        android:id="@+id/jewellery"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:gravity="center"
        android:layout_alignBottom="@+id/furniture"
        android:layout_alignStart="@+id/electronics"
        android:text="Jewellery" />
</RelativeLayout>
