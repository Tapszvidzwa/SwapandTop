<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/login_relativeLayout"
    tools:context="com.example.tapiwa.swapandtop.SwapandTop.Authentication.LoginScreenActivity">


    <TextView
        android:id="@+id/vehicles"
        android:layout_width="160dp"
        android:layout_height="190dp"
        android:text="Vehicles"
        android:paddingTop="50dp"
        android:gravity="top|center_horizontal"
        android:textSize="25dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/car_images"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
   />

    <TextView
        android:id="@+id/electronics"
        android:layout_width="160dp"
        android:layout_height="190dp"
        android:paddingTop="50dp"
        android:gravity="top|center_horizontal"
        android:textSize="25dp"
        android:layout_marginRight="2dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/electronics"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/vehicles"
        android:text="Electronics" />

    <TextView
        android:id="@+id/furniture"
        android:layout_width="160dp"
        android:paddingTop="50dp"
        android:layout_height="190dp"
        android:gravity="top|center_horizontal"
        android:textSize="25dp"
        android:background="@drawable/furniture"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/vehicles"
        android:layout_marginBottom="32dp"
        android:text="Furniture" />

    <TextView
        android:id="@+id/jewellery"
        android:layout_width="160dp"
        android:paddingTop="50dp"
        android:layout_height="190dp"
        android:gravity="top|center_horizontal"
        android:textSize="25dp"
        android:background="@drawable/jewellery"
        android:layout_alignBottom="@+id/furniture"
        android:layout_alignStart="@+id/electronics"
        android:text="Jewellery" />

    <TextView
        android:id="@+id/select_category_txtV"
        android:layout_width="wrap_content"
        android:background="@color/colorAccent"
        android:textColor="@android:color/black"
        android:paddingLeft="100dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="100dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_centerInParent="true"
        android:text="@string/front_page" />

    <ImageView
        android:id="@+id/arrow1_imgv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/vehicles"
        android:layout_alignEnd="@+id/vehicles"
        android:layout_marginBottom="12dp"
        android:src="@drawable/ic_cursor" />

    <ImageView
        android:id="@+id/arrow2_imgv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="invisible"
        android:layout_alignStart="@+id/electronics"
        android:layout_alignTop="@+id/arrow1_imgv"
        android:layout_marginStart="12dp"
        android:rotation="70"
        android:src="@drawable/ic_cursor" />

    <ImageView
        android:id="@+id/arrow3_imgv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="invisible"
        android:layout_alignEnd="@+id/furniture"
        android:layout_alignTop="@+id/arrow4_imgv"
        android:layout_marginEnd="12dp"
        android:rotation="250"
        android:src="@drawable/ic_cursor" />

    <ImageView
        android:id="@+id/arrow4_imgv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="invisible"
        android:layout_alignStart="@+id/jewellery"
        android:layout_alignTop="@+id/jewellery"
        android:layout_marginTop="11dp"
        android:rotation="180"
        android:src="@drawable/ic_cursor" />

</RelativeLayout>
